{% extends 'base.html.twig' %}
{% block title %}Recipe{% endblock %}

{% block body %}
<div  class="recipe" >
   <div class="titles"><h2>Détails de la recette </h2></div>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ recipe.titre }}</td>
            </tr>
            <tr>
                <th>Sous Titre</th>
                <td>{{ recipe.sousTitre }}</td>
            </tr>
            <tr>
                <th>Ingrédients</th>
                <td>{{ recipe.ingredients ? recipe.ingredients|join(',') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary backButton" href="{{ path('recipe_index') }}">Retour à la liste</a>

    <a class="btn btn-primary backButton" href="{{ path('recipe_edit', {'id': recipe.id}) }}">Modifier</a>

    {{ include('recipe/_delete_form.html.twig') }}
</div>
{% endblock %}
